@model YourLocalization.Application.ViewModels.Subtype.NewSubtypeVm

@{
    ViewData["Title"] = "AddSubtype";
}

<h1>Add new subtype</h1>

<h4>Please fill in the fields.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSubtype">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <label asp-for="TypeId" class="control-label"></label>
            <select class="form-select" asp-for="TypeId" aria-label="Default select example">
                <option selected>Choose type of point</option>
                @foreach (var item in Model.Types)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group">
                    <input type="submit" value="Create" class="w-100 btn btn-primary mt-2" />
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <a class="w-100 btn btn-primary mt-2" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
