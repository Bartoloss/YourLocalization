@using Microsoft.AspNetCore.Identity
@using YourLocalization.Domain.Model
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Select Register";
}


@if ((!SignInManager.IsSignedIn(User)) || (User.IsInRole("Admin")))
{
    <div class="text-center">
        <style>
            .card:hover {
                box-shadow: -1px 9px 40px -12px #808080;
            }
        </style>
        <h2> Who are you?</h2>
        <div class="col d-flex justify-content-center">
            <div class="row">
                <div class="card" style="width:20em;margin:10px;">
                    <img src="~/1.png" class="card-img-top" />
                    <div class="card-body">
                        <div class="card-title">
                            <h2>I'm user</h2>
                        </div>
                        <div class="card-text">
                            <p>Do you want to report the location of a shop, hairdresser or other place that you think is missing in your area?</p>
                        </div>
                        <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Register" asp-route-isCustomer="false">Register</a>
                    </div>
                </div>
                <div class="card" style="width:20em;margin:10px;">
                    <img src="~/2.png" class="card-img-top" />
                    <div class="card-body">
                        <div class="card-title">
                            <h2>I'm customer</h2>
                        </div>
                        <div class="card-text">
                            <p>
                                <br>
                                Or would you like to see where the community needs your business?
                                <br>
                                <br>
                            </p>
                        </div>
                        <a class="btn btn-outline-warning" asp-area="Identity" asp-page="/Account/Register" asp-route-isCustomer="true">Register</a>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script type="text/javascript">
            $('.card').hover(
                function () {
                    $(this).animate({
                        marginTop: "-=1%",
                        marginBottom: "+=1%"
                    }, 200)
                },
                function () {
                    $(this) animate({
                        marginTop: "+=1%",
                        marginBottom: "-=1%"
                    },)
                }
            )
        </script>
    </div>

}
@if ((User.IsInRole("User")) || (User.IsInRole("Admin")))
{
    <div class="text-center">
        <style>
            .card:hover {
            box-shadow: -1px 9px 40px -12px #808080;
            }
        </style>
        <div class="col d-flex justify-content-center">
            <div class="row">
                <div class="card" style="width:30em;margin:10px;">
                    <div class="card-title" style="margin-top:30px">
                        <h2>Welcome to YourLocalization @User.Identity.Name ! </h2>
                    </div>
                    <img src="https://img.freepik.com/darmowe-wektory/lokalizacja_53876-25530.jpg" class="rounded mx-auto d-block" style="max-width:70%;" />
                    <div class="card-body">
                        <div class="card-text">
                            <p>You can add new point to report the location of a shop, hairdresser or other place that you think is missing in your area.</p>
                        </div>
                        <a class="btn btn-outline-primary" asp-controller="Point" asp-action="AddPoint">Go to report location</a>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script type="text/javascript">
            $('.card').hover(
            function () {
            $(this).animate({
            marginTop: "-=1%",
            marginBottom: "+=1%"
            }, 200)
            },
            function () {
            $(this) animate({
            marginTop: "+=1%",
            marginBottom: "-=1%"
            },)
            }
            )
        </script>
    </div>
}


