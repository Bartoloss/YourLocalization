@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">Welcome to YourLocalization App!</h1>
    <br>
    <br>
    <br>
    <br>
    <h5>Do you want to report the location of a shop, hairdresser</h5>
    <h5>or other place that you think is missing in your area?</h5>
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/RegisterUser">User Register</a>
    <br>
    <br>
    <br>
    <h5>Or would you like to see where the community</h5>
    <h5>needs your business?</h5>
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/RegisterCustomer">Customer Register</a>
    <br>
    <br>
    <br>
    <br>
    <br>

    @if (User.IsInRole("Admin"))
    {
        <h4 class="display-9"> USER MENU </h4>
        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">List of users</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="AddUser">Add new user</a>
    }

    @if (User.IsInRole("User"))
    {
        <h4 class="display-9"> POINT MENU </h4>
        <a class="nav-link text-dark" asp-area="" asp-controller="Point" asp-action="Index">List of points</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Point" asp-action="AddPoint">Add new point</a>
    }

    @if (User.IsInRole("Admin"))
    {
        <h4 class="display-9"> TYPE MENU </h4>
        <a class="nav-link text-dark" asp-area="" asp-controller="Type" asp-action="Index">List of point types</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Type" asp-action="AddType">Add new point type</a>
    }

    
</div>
