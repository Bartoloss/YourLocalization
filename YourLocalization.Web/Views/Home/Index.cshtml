@using Microsoft.AspNetCore.Identity
@using YourLocalization.Domain.Model
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
    ViewData["Title"] = "Menu";
}

<div class="text-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <h3 class="display-4">YOUR'S MENU</h3>
        <br>
        <br>

        @if (User.IsInRole("Admin"))
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">List of users</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="AddUser">Add new user</a>
        }
        <br>
        @if (User.IsInRole("Admin"))
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Point" asp-action="Index">List of points</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Point" asp-action="AddPoint">Add new point</a>
        }
        <br>
        @if (User.IsInRole("Admin"))
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Type" asp-action="Index">List of point types</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Type" asp-action="AddType">Add new point type</a>
        }
    }

</div>


